<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:c="http://www.springframework.org/schema/c"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:tx="http://www.springframework.org/schema/tx"

       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
          http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-4.3.xsd
          http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd
          http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-4.3.xsd
">
    <bean id="orderDao" class="Data.OrderDaoImpl"/>
    <bean id="taxDao" class="Data.TaxDaoImpl"/>
    <bean id="productDao" class="Data.ProductDaoImpl"/>
    <bean id="ConsoleIO" class="com.mycompany.consoleio.ConsoleIO"/>
    
    <bean id="AuditDao" class="Data.AuditDaoImpl"/>
    <bean id ="auditAspect" class ="Data.AuditAspect">
        <constructor-arg  ref = "AuditDao"/>
    </bean>
    
    <bean id="MasterController" class="FloorMasterController.FloorMasterController" >
        <constructor-arg ref="AuditDao"/>
        <constructor-arg ref="orderDao"/>
        <constructor-arg ref="taxDao"/>
        <constructor-arg ref="productDao"/>
        <constructor-arg ref="ConsoleIO"/>
    </bean>
     
    <aop:config>
        <aop:aspect ref="auditAspect">
            <aop:after method= "addRemoveAudit" pointcut= "execution(* Data.OrderDao.delete(..))"/>
            <aop:after method= "addUpdateAudit" pointcut= "execution(* Data.OrderDao.update(..))"/>
            <aop:after method= "addRemoveAudit" pointcut= "execution(* Data.OrderDao.add(..))"/>
        </aop:aspect>    
    </aop:config>
                
</beans>